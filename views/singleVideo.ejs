<%- include('./partials/header'); -%>

<main>
    <div class='ui segment'>
        <center>
            <h1>Title:<%=video.name%></h1>
        </center>
    </div>
    <div>
        <center>
            <video  width="650" height="350" controls>
                <source src=<%=video.videoUrl %> type="video/mp4">
                <!-- WebM video format (VP8 codec) -->
                <source src="<%= video.videoUrl %>" type="video/webm">
                <source src="<%= video.videoUrl %>" type="video/x-matroska">
                <!-- Ogg video format (Theora codec) -->
                <source src="<%= video.videoUrl %>" type="video/ogg">
            </video>
            <div style="display: flex; align-items: center; justify-content: center;">
                <h2>Description:</h2>
                <p style=" padding: 2px 3px 15px;"><%=video.description%></p>
            </div>
        </center>
    </div>
</main>
<footer>
    <%- include('./partials/footer'); -%>
</footer>